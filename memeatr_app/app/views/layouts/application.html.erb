<!DOCTYPE html>
<html>
<head>
  <title>MemeatrApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <h4><%= link_to "Home", root_path %></h4>

  <% if current_user %>
  <h2>Hi, <%= current_user.username %>!</h2>
  <p><%= link_to "My Homepage", user_path(current_user) %> |
    <%= link_to "Log Out", logout_path %> |
    <%= link_to "New Game", new_game_path %> </p>
  <hr>

  <% else %>
  <p><%= link_to "Sign Up", new_user_path %> | <%= link_to "Log In", login_path %></p>
  <hr>
  <% end %>

<%= yield %>

</body>
</html>
